---
import Layout from "../../layouts/Layout.astro";
const allPosts = await Astro.glob("../posts/*.md*");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<Layout title="Lulu's Levels">
  <main>
  <div class="tags pt-4">
    {
      tags.map((tag) => (
        <p class="tag">
          <a href={`/level/${tag}`}>{tag}</a>
        </p>
        <ul>
          {
            allPosts.map(post=>{
              const logTags = post.frontmatter.tags as [string];
              logTags.includes(tag)?? (
              <li>
            <a>{post.frontmatter.title}</a>
          </li>
          )
            })
          }
        </ul>
      ))
    }
  </div>
  </main>
</Layout>

<style>
  a {
    color: #07362c;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.25em;
    padding: 0.2em 0.5em;
    font-size: 1.15em;
    background-color: #dbbe7b;
  }

</style>